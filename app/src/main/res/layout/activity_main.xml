<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.opengl.GLSurfaceView
        android:id="@+id/surfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top" />

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <TextView
        android:id="@+id/tv_result_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_result"
        android:layout_alignLeft="@+id/tv_result"
        android:layout_alignRight="@+id/tv_result"
        android:background="#333333"
        android:paddingBottom="2dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:text="RESULT"
        android:textColor="#ffffff"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#333333"
        android:paddingBottom="24dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="2dp"
        android:textColor="#ffffff"
        android:textSize="18sp"
        tools:text="123" />

    <ScrollView
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="#454545">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/iv_cube1"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube2"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube3"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube4"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube5"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube6"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube7"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube8"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube9"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube10"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube11"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube12"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube13"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube14"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube15"
                style="@style/cube" />

            <ImageView
                android:id="@+id/iv_cube16"
                style="@style/cube" />
        </LinearLayout>

    </ScrollView>


</RelativeLayout>